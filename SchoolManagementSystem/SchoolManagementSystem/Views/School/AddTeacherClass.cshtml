
@{
    ViewData["Title"] = "AddTeacherClass";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-4 mb-4" style="width:100%">
    <div class="col-md-12">
        <div style="border-top-width:10px;" class="card card-default border-top-10 border-success">
            <div class="card-header">
                <h2 class="card-title">Enter Student Teacher Class Routine</h2>
            </div>
            <form>
                <div class="card-body">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <label>Select Teacher</label>
                                <select class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true">
                                    <option selected="selected" data-select2-id="3">Select</option>
                                    <option>Salma Begum</option>
                                    <option>Nila Akter</option>
                                    <option>Jahangir ALom</option>
                                    <option>Khorshed Alom</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label>Class Name</label>
                                <select class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true">
                                    <option selected="selected" data-select2-id="3">Select</option>
                                    <option>Class Play</option>
                                    <option>Class Nursary</option>
                                    <option>Class KG</option>
                                    <option>Class ONE</option>
                                    <option>Class Two</option>
                                    <option>Class Three</option>
                                    <option>Class Four</option>
                                    <option>Class Five</option>
                                </select>
                            </div>                           
                        </div>
                        <div class="row">
                             <div class="col-md-6">
                                <label>Subject Name</label>
                                <select class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true">
                                    <option selected="selected" data-select2-id="3">Select</option>
                                    <option>Bangla</option>
                                    <option>English</option>
                                    <option>Mathmetics</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label>Section</label>
                                <select class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true">
                                    <option selected="selected" data-select2-id="3">Select</option>
                                    <option>A</option>
                                    <option>B</option>
                                    <option>C</option>
                                    <option>D</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <label for="RoomNo">Room No</label>
                                <input type="number" class="form-control" id="room_No">
                            </div>
                            <div class="col-md-4">
                                <label>Shift</label>
                                <select class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true">
                                    <option selected="selected" data-select2-id="3">Select</option>
                                    <option>Morning</option>
                                    <option>Day</option>
                                    <option>Evening</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label>Week Days</label>
                                <select class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true">
                                    <option selected="selected" data-select2-id="3">Select</option>
                                    <option>Saturday</option>
                                    <option>Sunday</option>
                                    <option>Monday</option>
                                    <option>Tuesday</option>
                                    <option>Wednesday</option>
                                    <option>Thursday</option>
                                    <option>Friday</option>
                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <label for="StartTime">Start Time</label>
                                <input type="time" class="form-control" id="start_Time">
                            </div>
                            <div class="col-md-4">
                                <label for="EndTime">End Time</label>
                                <input type="time" class="form-control" id="end_time">
                            </div>
                            <div class="col-md-4">
                                <label for="duration">Duration</label>
                                <input type="text" class="form-control" id="duration">
                            </div>

                        </div>

                        <div class="row">
                            <div class="form-group ml-3 mt-3">
                                <button class="btn btn-success">Save</button>
                                <a href="TeacherClassRoutine" class="ml-3 btn btn-outline-info">Back To List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


