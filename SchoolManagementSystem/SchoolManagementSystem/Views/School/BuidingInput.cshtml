
@{
    ViewData["Title"] = "BuidingInput";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr style="width:100%" class="bg-success col-lg-12" />
<div class="wrapper" style="width:100%">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarText">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a href="BuidingList" class="nav-link branch"><h3>Building List</h3></a>
                </li>
                <li class="nav-item">
                    <h3 href="BuidingInput" class="nav-link branch " data-toggle="modal" data-target="#buildingInsert">Building</h3>
                </li>
            </ul>
        </div>
    </nav>
</div>


<div class="container">
    <div class="modal fade" id="buildingInsert">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title">Building</h1>
                    <button class="close btn btn-outline-info m-1" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <div class="row p-3">
                                <label>Select Campus</label>
                                <select class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true">
                                    <option selected="selected" data-select2-id="3">Select</option>
                                    <option>Mirpur</option>
                                    <option>Monipur</option>
                                    <option>Danmondi</option>
                                    <option>Gulsan</option>
                                </select>
                            </div>
                            <div class="row p-3">
                                <label for="Buiding Name">Buiding Name</label>
                                <input type="text" class="form-control" id="building_Name">
                            </div>
                            <div class="row p-3">
                                <label for="Building Avenue Name">Building Avenue Name</label>
                                <input type="text" class="form-control" id="building_Avenue_Name">
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-danger" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-info">Send</button>
                </div>
            </div>
        </div>
    </div>
</div>

