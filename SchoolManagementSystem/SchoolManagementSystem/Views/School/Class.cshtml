<div class="row mt-4 mb-4" style="width:100%">
    <div class="col-md-12">
        <div class="card card-gray">
            <div class="card-header">
                <h2 class="card-title">Set Class Subject</h2>
            </div>
            <form asp-action="Class" method="post">
                <div class="card-body">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <label>Class Name</label>
                                <input type="text" class="form-control" id="class_Name" placeholder="Enter Class Name" name="ClassName" />
                            </div>
                            <div class="col-md-6">
                                <label>Select Section</label>
                                <select name="CurriculumId" class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true">
                                    <option selected="selected" data-select2-id="3">Select</option>
                                    <option value="1">A</option>
                                    <option value="1">B</option>
                                    <option value="1">C</option>
                                    <option value="1">D</option>
                                </select>
                            </div>
                                                      
                        </div>

                        <div class="row">
                            <div class="form-group ml-3 mt-3">
                                <button class="btn btn-success">Save</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



