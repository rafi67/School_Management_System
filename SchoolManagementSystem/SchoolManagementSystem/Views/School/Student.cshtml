                                        <option value="AB-">AB-</option>
                                        <option value="O+">O+</option>
                                        <option value="O-">O-</option>
                                    </select>
                                </div>

                                <div class="col-md-3">
                                    <label>Mother Occupation</label>
                                    <select name="MotherOccupation" class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true">
                                        <option selected="selected" data-select2-id="3">Select Occupation</option>
                                        <option value="House Wife">House Wife</option>
                                        <option value="Teacher">Teacher</option>
                                        <option value="Doctor">Doctor</option>
                                        <option value="Driver">Driver</option>
                                        <option value="Business">Business</option>
                                        <option value="Others">Others</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label for="MotherPhoto">Mother Photo</label>
                                    <input name="MotherPhoto" type="file" class="form-control" id="Mother_Photo" />
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <label>If Guardian Is: </label>	&nbsp;	&nbsp;	&nbsp;	&nbsp;
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="radio1">
                                    <label class="form-check-label">Father</label> &nbsp;	&nbsp;	&nbsp; &nbsp;	&nbsp;	&nbsp;
                                    <input class="form-check-input" type="radio" name="radio1" checked="">
