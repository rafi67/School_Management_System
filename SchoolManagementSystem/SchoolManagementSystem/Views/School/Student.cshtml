
@{
    ViewData["Title"] = "Student";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var Campus = ViewData["Campus"] as List<SchoolManagementSystem.Models.Campus>;
    var Class = ViewData["Class"] as List<SchoolManagementSystem.Models.Class>;
    var Shift = ViewData["Shift"] as List<SchoolManagementSystem.Models.Shift>;
    var Group = ViewData["Group"] as List<SchoolManagementSystem.Models.Group>;
    var Session = ViewData["Session"] as List<SchoolManagementSystem.Models.Session>;
    var Section = ViewData["Section"] as List<SchoolManagementSystem.Models.Section>;
    var Curriculum = ViewData["Curriculum"] as List<SchoolManagementSystem.Models.Curriculum>;
}

<form asp-action="StudentAdmission" method="post" enctype="multipart/form-data">
<div class="row mt-3 mb-4" style="width:100%">
    <div class="col-md-12">
        <div class="card card-gray">
            <div class="card-header">
                <h2 class="card-title">Student Admission</h2>
            </div>
                <div class="card-body">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <label>Roll Number</label>
                                <input name="RollNumber" type="number" class="form-control" id="rollNumber">
                            </div>
                            <div class="col-md-3">
                                <label>Campus</label>
                                <select name="CampusId" class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true">
                                    <option selected="selected" data-select2-id="3">Select Campus</option>
                                    @foreach(var list in Campus)
                                    {
                                        <option value="@list.CampusId">@list.CampusName</option>
                                    }

                                </select>
                            </div>

                            <div class="col-md-3">
                                <label>Curriculum</label>
                                <select name="CurriculumId" class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true">
                                    <option selected="selected" data-select2-id="3">Select Curriculum</option>
                                    @foreach (var list in Curriculum)
                                    {
                                        <option value="@list.CurriculumId">@list.CurriculumName</option>
                                    }
                                </select>
                            </div>

                            <div class="col-md-3">
                                <label>Class</label>
                                <select name="ClassId" class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true">
                                    <option selected="selected" data-select2-id="3">Select Class</option>
                                    @foreach(var list in Class)
                                    {
                                        <option value="@list.ClassId">@list.ClassName</option>
                                    }
                                </select>
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-3">
                                    <label>First Name</label>
                                    <input name="FirstName" type="text" class="form-control" id="first_Name">
                                </div>
                                <div class="col-md-3">
                                    <label>Last Name</label>
                                    <input name="LastName" type="text" class="form-control" id="last_Name">
                                </div>
                                <div class="col-md-3">
                                    <label>Gender</label>
                                    <select name="Gender" class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true">
                                        <option selected="selected" data-select2-id="3">Select Class</option>
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                        <option value="Other">Others</option>
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <label>Shift</label>
                                    <select name="ShiftId" class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true">
                                        <option selected="selected" data-select2-id="3">Select Shift</option>
                                        @foreach(var list in Shift)
                                        {
                                            <option value="@list.ShiftId">@list.ShiftName-@list.ShiftType</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-3">
                                    <label>Session</label>
                                    <select name="SessionId" class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true">
                                        <option selected="selected" data-select2-id="3">Select Session</option>
                                        @foreach(var list in Session)
                                        {
                                            <option value="@list.SessionId">@list.SessionName</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <label>Religion</label>
                                    <select name="Religion" class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true">
                                        <option selected="selected" data-select2-id="3">Select Religion</option>
                                        <option value="Islam">Islam</option>
                                        <option value="Hindu">Hindu</option>
                                        <option value="Christian">Christian</option>
                                        <option value="Buddhism">Buddhism</option>
                                        <option value="Others">Others</option>
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <label>Section</label>
                                    <select name="SectionId" class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true">
                                        <option selected="selected" data-select2-id="3">Select</option>
                                        @foreach(var list in Section)
                                        {
                                            <option value="@list.SectionId">@list.SectionName</option>
                                        }
                                    </select>
                                </div>

                                <div class="col-md-3">
                                    <label>Group</label>
                                    <select name="GroupId" class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true">
                                        <option selected="selected" data-select2-id="3">Select</option>
                                        @foreach(var list in Group)
                                        {
                                            <option value="@list.GroupId">@list.GroupName</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-3">
                                    <label for="email">Email address</label>
                                    <input type="email" name="Email" class="form-control" id="email_Address">
                                </div>
                                <div class="col-md-3">
                                    <label for="MobileNumber">Mobile Number</label>
                                    <input type="text" name="PhoneNumber" class="form-control" id="mobile_Number">
                                </div>
                                <div class="col-md-3">
                                    <label>Present address</label>
                                    <input name="PresentAddress" type="text" class="form-control" id="present_Address">
                                </div>
                                <div class="col-md-3">
                                    <label for="ParmanentAddress">Parmanent address</label>
                                    <input name="PermanentAddress" type="text" class="form-control" id="parmanent_Address">
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-3">
                                    <label>Admission Date</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                                        </div>
                                        <input name="AdmissionDate" type="date" class="form-control" data-inputmask-alias="datetime" data-inputmask-inputformat="dd/mm/yyyy" data-mask="" inputmode="numeric">
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <label for="StudentPhoto">Student Photo</label>
                                    <input type="file" name="Photo" class="form-control"  />
                                </div>
                                <div class="col-md-3">
                                    <label>Date Of Birth</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                                        </div>
                                        <input name="DateOfBirth" type="date" class="form-control" data-inputmask-alias="datetime" data-inputmask-inputformat="dd/mm/yyyy" data-mask="" inputmode="numeric">
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <label>Nationality</label>
                                    <input name="Nationality" type="text" class="form-control" id="Nationality" />
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-3">
                                    <label>Previous School</label>
                                    <input name="PreviousSchool" type="text" class="form-control" id="previous_School" />
                                </div>
                                <div class="col-md-3">
                                    <label>GPA</label>
                                    <input name="Gpa" type="text" class="form-control" id="gpa" />
                                </div>
                                <div class="col-md-3">
                                    <label>Blood Group</label>
                                    <select name="StudentBloodGroup" class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true">
                                        <option selected="selected" data-select2-id="3">Select</option>
                                        <option value="A+">A+</option>
                                        <option value="A-">A-</option>
                                        <option value="B+">B+</option>
                                        <option value="B-">B-</option>
                                        <option value="AB+">AB+</option>
                                        <option value="AB-">AB-</option>
                                        <option value="O+">O+</option>
                                        <option value="O-">O-</option>
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <label>Birth Certificate</label>
                                    <input name="BirthCertificate" type="text" class="form-control" id="birth_Certificate">
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
        </div>
    </div>
</div>


<div class="row mt-3 mb-4" style="width:100%">
    <div class="col-md-12">
        <div class="card card-gray">
            <div class="card-header">
                <h2 class="card-title">Parent Guardian Detail</h2>
