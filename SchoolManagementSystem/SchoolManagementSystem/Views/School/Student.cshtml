                                    <input name="MotherPhoneNumber" type="text" class="form-control" id="motherPhone">
                                </div>
                                <div class="col-md-3">
                                    <label for="MotherEmail">Mother Email</label>
                                    <input name="MotherEmail" type="email" class="form-control" id="motherEmail">
                                </div>
                                <div class="col-md-3">
                                    <label for="MotherNid">Mother Nid</label>
                                    <input name="MotherNid" type="text" class="form-control" id="mother_Nid" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-3">
                                    <label>Mother Blood Group</label>
                                    <select name="MotherBloodGroup" class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true">
                                        <option selected="selected" data-select2-id="3">Select</option>
                                        <option value="A+">A+</option>
                                        <option value="A-">A-</option>
                                        <option value="B+">B+</option>
                                        <option value="B-">B-</option>
