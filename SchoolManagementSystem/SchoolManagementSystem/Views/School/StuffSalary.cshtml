
@{
    ViewData["Title"] = "StuffSalary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-5 mb-4" style="width:100%">
    <div class="col-md-12">
        <div class="card card-gray">
            <div class="card-header">
                <h2 class="card-title">Employee Salary</h2>
            </div>
           
            <form>
                <div class="card-body">
                    <h2>Enter Salary Details</h2>
                    <hr />
                    <div class="form-group">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6">
                                      <label>Select Employee</label>
                                    <select class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true">
                                        <option selected="selected" data-select2-id="3">Select</option>
                                        <option>SalMan Ahmad</option>
                                        <option>Lamia</option>
                                        <option>Tamanna</option>
                                        <option>Kajol</option>
                                        <option>Soshi</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label>Salary Date</label>
                                    <div class="input-group date" id="reservationdate" data-target-input="nearest">
                                        <input type="date" class="form-control datetimepicker-input">
                                        <div class="input-group-append">
                                            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6">
                                    <label for="SalaryMonth">Salary Month</label>
                                    <input type="month" class="form-control" id="salaryMonth">
                                </div>
                                <div class="col-md-6">
                                    <label for="Salary">Salary(Year)</label>
                                    <input type="number" class="form-control" id="name">
                                </div>                               
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6">
                                    <label for="Salary">Salary</label>
                                    <input type="number" class="form-control" id="salary">
                                </div>
                                <div class="col-md-6">
                                    <label for="Comments">Comments</label>
                                    <input type="text" class="form-control" id="comments">
                                </div>                                                             
                            </div>
                        </div>
                        <div>
                            <button class="btn btn-primary">Paid Salary</button>
                            <a href="StuffList" class="ml-3 btn btn-outline-info">Back To List</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

